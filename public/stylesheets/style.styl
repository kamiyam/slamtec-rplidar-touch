body, html
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0;
  padding: 0;
  height 100%;

.background
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  width: 100%;
  height: 100%;

.particle
  background-color: black;
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  width: 100%;
  height: 100%;